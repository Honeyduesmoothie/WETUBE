extends base.pug

block content 
    form.general-form(method="POST")
        input(name="title" placeholder="New title", value=video.title, required maxlength="80")
        textarea(name="description", id="description", placeholder="Description" required minlength="20") #{video.description}
        input(name="hashtags", id="hashtags", placeholder="Hashtags, separated by comma" value=video.hashtags.join() required)
        input.form-button(value="Save", type="submit")