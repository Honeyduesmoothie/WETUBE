extends base
include mixins/videoList

block content
    div.profile
        div.profile__user
            img(src=`/${user.avatarUrl}` width="100px" height="100px")
            div.profile__user__info
                p.profile__user__info__nickname=user.nickname
                p #{user.email}
                p #{user.username}
                p 
                    a.profile__user__info__edit.button(href="/users/edit") Edit profile
                if user.socialID
                    p Logged in via Github
        div.profile__videos
            h3 Uploaded videos
            div.home-videos
                each video in user.videos
                    +videoList(video)
        
