extends base.pug

block content 
    h1=video.title
    div#videoContainer
        video(src=`/${video.url}` width="300px" height="300px")
        div#controls
            button#playBtn Play
            button#muteBtn Mute
            input#volumeControl(type="range" min="0" max="1" value="0.5" step="0.1") 
            div 
                input(type="range", min="0", value=0)#timeline
                span#currentTime 00:00 
                span  / 
                span#totalTime 00:00
                button#fullScreen Full Screen
