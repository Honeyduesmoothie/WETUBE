extends base

block content
    if errorMessage
        span=errorMessage
    form(method="post")
        input(name="oriPwd", placeholder="Enter your original password" type="password" required)
        input(name="newPwd", placeholder="Enter your new password" type="password" required)
        input(name="newPwdConf", placeholder="Enter your new password again" type="password" required)
        input(type="submit" value="Change")